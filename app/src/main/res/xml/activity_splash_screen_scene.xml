<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:id="@+id/shimmer_view_container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/viewFlipperS"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" />
        <Constraint
            android:id="@+id/shimmer_view_container2"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container1"
            android:layout_marginLeft="5dp" />
        <Constraint
            android:id="@+id/shimmer_view_container3"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container2"
            android:layout_marginLeft="5dp" />
        <Constraint
            android:id="@+id/shimmer_view_container4"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container3"
            android:layout_marginLeft="5dp" />
        <Constraint
            android:id="@+id/shimmer_view_container5"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container4"
            android:layout_marginLeft="5dp" />
        <Constraint
            android:id="@+id/shimmer_view_container6"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container5"
            android:layout_marginLeft="5dp" />
        <Constraint
            android:id="@+id/shimmer_view_container7"
            motion:layout_constraintStart_toEndOf="@+id/shimmer_view_container6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/shimmer_view_container6"
            android:layout_marginLeft="5dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" />

</MotionScene>